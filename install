#!/bin/sh
#
# Create symlinks for all the dotfiles

LINK='ln -sf'
DOTFILES_ROOT=$(pwd)

set -e

# bash
$LINK $DOTFILES_ROOT/bash/.??* $HOME/

# zsh
$LINK $DOTFILES_ROOT/zsh/.??* $HOME/

# sublime text
$LINK $DOTFILES_ROOT/sublime/Default\ \(Linux\).sublime-keymap $HOME/.config/sublime-text-3/Packages/User/
$LINK $DOTFILES_ROOT/sublime/Preferences.sublime-settings $HOME/.config/sublime-text-3/Packages/User/
$LINK $DOTFILES_ROOT/sublime/Distraction\ Free.sublime-settings $HOME/.config/sublime-text-3/Packages/User/
$LINK $DOTFILES_ROOT/sublime/completeLineWithCommaNewline.sublime-macro $HOME/.config/sublime-text-3/Packages/User/
$LINK $DOTFILES_ROOT/sublime/completeLineWithSemicolonNewline.sublime-macro $HOME/.config/sublime-text-3/Packages/User/

# the rest
$LINK $DOTFILES_ROOT/.nanorc $HOME/
$LINK $DOTFILES_ROOT/.vimrc $HOME/
$LINK $DOTFILES_ROOT/.gitconfig $HOME/