[user]
	name = sebastianschnock
	email = sebastian.schnock@gmail.com
[push]
	default = simple
[core]
	editor = /usr/bin/vim
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
[mergetool]
	keepBackup = false
[pull]
	rebase = true
[alias]
	wip = !git add --all && git commit -m 'wip' && git push
	wipr = !git pull && git reset HEAD~1
